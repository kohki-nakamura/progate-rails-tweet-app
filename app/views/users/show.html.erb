<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= image_tag "/user_images/#{@user.image_name}" %>
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <div>
        <% if @current_user.id == @user.id%>
          <%= link_to "編集", "/users/#{@user.id}/edit"%>
        <% end %>
      </div>
    </div>
  </div>
</div>