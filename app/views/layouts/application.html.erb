<!DOCTYPE html>
<html>
  <head>
    <title>TweetApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
      <div class="header-logo">
        <a href="/">TweetApp</a>
      </div>
      <ul class="header-menus">
        <% if session[:user_id] %>
          <li>
            <%= @current_user.name %>
          </li>
          <li>
            <a href="/posts/index">投稿一覧</a>
          </li>
          <li>
            <a href="/posts/new">新規投稿</a>
          </li>
          <li>
            <a href="/users/index">ユーザー一覧</a>
          </li>
          <li>
            <a href="/logout">ログアウト</a>
          </li>
        <% else %>
          <li>
            <a href="/about">TweetAppとは</a>
          </li>
          <li>
            <a href="/signup">新規登録</a>
          </li>
          <li>
            <a href="/login">ログイン</a>
          </li>
        <% end %>
      </ul>
    </header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
